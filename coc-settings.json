{
  "julia.format.indent": 4,
  "sourcekit.commandPath": "/usr/local/bin/sourcekit-lsp",
  "languageserver": {
    "ocaml": {
      "command": "ocamllsp",
      "rootPatterns": ["dune-project"],
      "filetypes": ["ocaml"],
      "initializationOptions": {},
      "settings": {}
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        ".stack.yaml",
        "hie.yaml",
        "*.cabal",
        "cabal.project",
        "package.yaml"
      ],
      "filetypes": ["haskell"]
    }
  },
  "rust-analyzer.checkOnSave.command": "clippy"
}
